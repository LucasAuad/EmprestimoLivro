@model EmprestimosModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["title"] = "Excluir  Empréstimo";
}


<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">

        <h1 class="text-light">Exclusão de Empréstimos</h1>

    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for=Id />

        <h2 class="text-light">Tem certeza que deseja excluir o registro abaixo?</h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>

        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>

        </div>
        <div class="mb-3">
            <label for="Nome do Livro" class="form-label text-light">Nome do Livro:</label>
            <input type="text" class="form-control text-light" asp-for="LivroEmprestado" id="Livro" placeholder="Qual livro é o objeto do empréstimo?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>

        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>


        </div>

    </form>

</div>